<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    <!--<item name="android:listDivider">@drawable/shape_divider</item>-->
    <item name="colorControlNormal">@android:color/darker_gray</item>
    <item name="colorControlActivated">@color/primary</item>
    <item name="selectableItemBackgroundRipple">@drawable/selector_item_background</item>
  </style>

  <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@android:color/white</item>
  </style>

  <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="android:windowBackground">@color/primary</item>
  </style>
  <style name="InlineButton">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:paddingLeft">@dimen/dp15</item>
    <item name="android:paddingRight">@dimen/dp15</item>
    <item name="android:paddingTop">@dimen/dp10</item>
    <item name="android:paddingBottom">@dimen/dp10</item>
    <item name="android:textSize">@dimen/TextMiddle</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:background">@drawable/selector_btn_primary</item>
  </style>
  <!--行内文本-->
  <style name="InlineText">
    <item name="android:textSize">@dimen/TextSmall</item>
    <item name="android:textColor">@color/subTitleGray</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <!--标题-->
  <style name="TitleText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/TextLarge</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:ellipsize">end</item>
  </style>
  <!--简介-->
  <style name="DescriptionText">
    <item name="android:textSize">@dimen/TextMiddle</item>
    <item name="android:textColor">@color/subTitleGray</item>
    <item name="android:maxLines">3</item>
    <item name="android:ellipsize">end</item>
    <item name="android:lineSpacingExtra">@dimen/dp5</item>
  </style>
  <!--菜单文本样式-->
  <style name="tabText">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/TextSmall</item>
    <item name="android:textColor">@drawable/selector_menu_textColor</item>
    <item name="android:paddingTop">@dimen/dp10</item>
    <item name="android:clickable">true</item>
  </style>
  
  <style name="EditTextComment">
    <item name="android:textSize">@dimen/TextMiddle</item>
    <item name="android:textColor">@color/lightBlack</item>
    <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
  </style>
  
  <style name="BottomText">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">@dimen/dp80</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/TextSmall</item>
    <item name="android:textColor">@drawable/selector_menu_textColor</item>
    <item name="android:paddingTop">@dimen/dp10</item>
  </style>

  <color name="progressBackground">#fbfbfb</color>
</resources>
