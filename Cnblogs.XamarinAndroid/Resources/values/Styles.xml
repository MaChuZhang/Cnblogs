<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    <!--<item name="android:listDivider">@color/dedede</item>-->
  </style>

  <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@android:color/white</item>
  </style>

  <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="android:windowBackground">@color/primary</item>
  </style>
   <!--行内文本-->
  <style name="InlineText">
    <item name="android:textSize">@dimen/TextSmall</item>
    <item name="android:textColor">@color/subTitleGray</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <!--标题-->
  <style name="TitleText">
    <item name="android:textSize">@dimen/TextLarge</item>
    <item name="android:textColor">@color/titleDrak</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
  </style>
  <!--简介-->
  <style name="DescriptionText">
    <item name="android:textSize">@dimen/TextMiddle</item>
    <item name="android:textColor">@color/subTitleGray</item>
    <item name="android:maxLines">3</item>
    <item name="android:ellipsize">end</item>
    <item name="android:lineSpacingExtra">@dimen/dp5</item>
  </style>
  
  <color name="progressBackground">#dedede</color>
</resources>
